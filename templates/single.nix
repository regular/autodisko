# Autodisko will fill in the let .. in section
#let 
#  mainDevicePath = "/dev/somedevice";
#in 
{
  disko.devices = {
    disk = {
      main = {
        device = "${mainDevicePath}";
        type = "disk";
        content = {
          type = "gpt";
          partitions = {
            ESP = {
              end = "500M";
              type = "EF00";
              content = {
                type = "filesystem";
                format = "vfat";
                mountpoint = "/boot";
              };
            };
            root = {
              name = "root";
              end = "-0";
              content = {
                type = "filesystem";
                format = "bcachefs";
                mountpoint = "/";
              };
            };
          };
        };
      };
    };
  };
}
